<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="CustomApp.Controls.Views.CardView">

    <Frame Margin="10" Grid.Column="0" Grid.Row="1" HeightRequest="210" WidthRequest="180" CornerRadius="5"
           BackgroundColor="{Binding IconBackgroundColor, FallbackValue=#FBFBFB}">
        
        <StackLayout Orientation="Vertical">
            <Image Source="{Binding IconImageSource}" WidthRequest="150" Margin="0,0,5,0"/>
            <StackLayout VerticalOptions="Center">
                <Label
                   Margin="0,15,0,0"
                   FontSize="Micro"
                   FontAttributes="Bold"
                   FontFamily="Century Gothic"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Text="{Binding CardTitle}"
                   />
                <Label
                   Margin="0,0,0,0"
                   FontSize="Default"
                   FontAttributes="None"
                   FontFamily="default"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Text="{Binding CardHandlingTime}"
                   />
            </StackLayout>
        </StackLayout>
    </Frame>

</ContentView>
