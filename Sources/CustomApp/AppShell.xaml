<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CustomApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:CustomApp.Controls.Pages"
    xmlns:views="clr-namespace:CustomApp.Controls.Views"
    FlyoutBackgroundColor="#474747">

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="30,*" Padding="10">
                <Image Source="{Binding Icon}" Scale="0.7" VerticalOptions="Center"/>
                <Label Text="{Binding Title}" Padding="10" TextColor="White" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
    
    <Shell.FlyoutHeader>
        <views:ShellFlyoutHeader />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Zutaten" Icon="icon50karotte.png" Route="calculator" >
        <ShellContent ContentTemplate="{DataTemplate pages:CalculatorPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Rezepte" Icon="icon100rezept.png" Route="users">
        <ShellContent ContentTemplate="{DataTemplate pages:UsersPage}" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <views:ShellFlyoutFooter />
    </Shell.FlyoutFooter>

</Shell>
